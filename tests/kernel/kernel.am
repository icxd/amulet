fn strlen(s: c_char*) -> usz {
  mut i: usz = 0;
  while s[i] != 0 {
    i += 1usz;
  }
  return i;
}

fn kmain() callconv(C) {
  mut video_buffer = 0xb8000 as u8*;
  let text = c"Hello, world!\n";

  mut i: usz = 0;
  while i < strlen(text) {
    video_buffer[i * 2] = text[i] as u8;
    video_buffer[i * 2 + 1] = 0x07;
    i += 1usz;
  }

  loop {}
}
