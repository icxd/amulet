fn strlen(str: c_char*) -> usz {
  mut length = 0usz;
  while str[length] != 0 {
    length += 1usz;
  }
  return length;
}

fn kmain() callconv(C) {
  mut video_buffer = 0xb8000 as u8*;
  let text = c"Hello, world!\n";
  let length = strlen(text);

  mut i: usz = 0;
  while i < length {
    video_buffer[i * 2] = text[i] as u8;
    video_buffer[i * 2 + 1] = 0x07;
    i += 1usz;
  }

  loop {
    asm volatile { "cli" "hlt" };
  }
}
